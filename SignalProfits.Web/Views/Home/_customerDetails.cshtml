@model SignalProfits.Web.Model.CustomerModel

<div class="form-group">
    <div class="alert alert-success" id="cust-status-alert">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <span id="spanCusStatus"></span>
    </div>
</div>
<div class="hpanel">
    <div class="panel-body">
        <div class="form-group col-lg-12">
            <label for="inputName">Email</label>
            <input type="text" class="form-control" id="Email" placeholder="Enter email" value="@Model.Email" />
        </div>
        <div class="form-group col-lg-12">
            <label for="inputEmail">Description</label>
            <input type="email" class="form-control" id="Description" placeholder="Enter description" value="@Model.Description" />
        </div>

        <input type="hidden" id="hdnCustomerId" name="hdnCustomerId" value="@Model.CustomerId" />

    </div>
</div>
